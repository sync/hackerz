{
  "name": "hackerz",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": "8.x.x"
  },
  "config": {
    "publicDir": "dist"
  },
  "scripts": {
    "clean": "rimraf dist && bsb -clean-world",
    "dev": "run-p -c dev:*",
    "dev:reason": "bsb -make-world -w",
    "dev:rollup": "cross-env NODE_ENV=development rollup -c -w",
    "dev:server": "now-lambda",
    "dev-graphql": "run-p -c dev-graphql:*",
    "dev-graphql:reason": "bsb -make-world -w",
    "dev-graphql:api": "yarn --cwd packages/api dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,html,graphql}\"",
    "pre-build": "cd node_modules/reason-react && npx esy install && npx esy build",
    "build": "yarn clean && yarn build:reason && yarn create-bundles",
    "build:reason": "bsb -make-world",
    "create-bundles": "cross-env NODE_ENV=production rollup -c",
    "start": "yarn build && now-lambda",
    "test": "yarn build:reason && jest --config jest.json",
    "test-watch": "run-p -c test-watch:*",
    "test-watch:reason": "yarn dev:reason",
    "test-watch:jest": "jest --config jest.json --watch",
    "lint": "run-p -c lint:*",
    "lint:css": "stylelint '**/*.css'",
    "lint:ts": "eslint '**/*.js{,x}'",
    "ci": "yarn pre-build && yarn build && yarn lint && yarn test",
    "deploy:production": "now --token $NOW_TOKEN --target production",
    "deploy:staging": "now --token $NOW_TOKEN --target staging",
    "ci:deploy": "scripts/deploy-ci.sh",
    "e2e-build": "yarn pre-build && yarn build",
    "e2e": "yarn e2e-build && yarn --cwd packages/e2e jest"
  },
  "dependencies": {
    "@glennsl/bs-json": "3.0.0",
    "bs-fetch": "0.3.1",
    "core-js": "3.0.0",
    "graphql-hooks": "3.4.1",
    "graphql-hooks-memcache": "1.2.0",
    "isomorphic-fetch": "2.2.1",
    "let-anything": "1.0.3",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "reason-future": "2.4.0",
    "reason-graphql": "git://github.com/sync/reason-graphql.git#hack/subs",
    "reason-react": "git://github.com/reasonml/reason-react.git"
  },
  "devDependencies": {
    "@babel/core": "7.4.0",
    "@babel/polyfill": "7.4.0",
    "@babel/preset-env": "7.4.2",
    "@babel/preset-react": "7.0.0",
    "autoprefixer": "9.5.0",
    "babel-jest": "24.5.0",
    "bs-platform": "5.0.0",
    "cross-env": "5.2.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-synacor": "3.0.3",
    "eslint-plugin-jest": "22.4.1",
    "graphql_ppx": "0.2.8",
    "husky": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.5.0",
    "jest-dom": "3.1.3",
    "jest-haste-map": "24.5.0",
    "jest-resolve": "24.5.0",
    "lint-staged": "8.1.5",
    "now": "15.0.0",
    "now-lambda-runner": "3.3.0",
    "npm-run-all": "4.1.5",
    "postcss-modules": "1.4.1",
    "prettier": "1.16.4",
    "react-testing-library": "6.0.3",
    "rimraf": "2.6.3",
    "rollup": "1.7.4",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.2",
    "rollup-plugin-copy-assets": "1.1.0",
    "rollup-plugin-filesize": "6.0.1",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-livereload": "1.0.0",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-postcss": "2.0.3",
    "rollup-plugin-progress": "1.1.1",
    "rollup-plugin-replace": "2.1.1",
    "rollup-plugin-terser": "4.0.4",
    "rollup-plugin-workbox-build": "0.1.0",
    "stylelint": "9.10.1",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-standard": "18.2.0"
  },
  "resolutions": {
    "bs-platform": "5.0.0",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.{js,json,css,md,html}": [
      "yarn format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint",
      "post-commit": "git update-index -g"
    }
  }
}
